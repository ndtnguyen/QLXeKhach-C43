@model IEnumerable<C43QLXeKhach.Models.LOTRINH>

@{
    ViewBag.Title = "Danh Sách Lộ Trình";
}

@*<h2>Index</h2>*@

<div class="row">
    <div class="col-md-4" id="lotrinhTitle" style="cursor:pointer"><h2>Danh Sách Lộ Trình</h2></div>
</div>

<div class="row">
    <div class="col-md-8">
        <p>

            <a href="/LOTRINHs/Create" class="btn btn-primary" title="add">
                Thêm Lộ Trình
                @*<span class="glyphicon glyphicon-plus"></span>*@
            </a>
            @* @Html.ActionLink("Them tinh thanh", "Create")*@
            <button class="btn btn-danger" id="btnDelete" title="delete">
                Xóa Lộ Trình
                @*<span class="glyphicon glyphicon-remove"></span>*@
            </button>
        </p>
    </div>
</div>

<form action="/TUYENXEs/Index" method="POST" id="frmlotrinh">
    @Html.AntiForgeryToken()
    <div class="table-responsive">
        <table class="table table-hover" id="dataTable" cellspacing="0">
            <thead>
                <tr>
                    <th>

                    </th>
                    <th>
                        Mã tuyến
                    </th>
                    <th>
                        Mã trạm
                    </th>
                    <th>
                        Thứ tự
                    </th>
                    <th>
                        Khoảng thời gian
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input class="text-center deleteCheckbox" type="checkbox" name="deletecheckbox" value=@item.MaTuyen>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaTuyen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaTram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThuTu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KhoangThoiGian)
                        </td>
                        <td>
                            <a href="/LOTRINHs/Edit/@item.MaTuyen" class="btn btn-xs btn-primary" title="edit">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            @*<a href="/NHANVIENs/Details/@item.MaNV" class="btn btn-xs btn-info" title="details">
                                    <span class="glyphicon glyphicon-book"></span>
                                </a>*@
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</form>
