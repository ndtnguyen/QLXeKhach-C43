@model C43QLXeKhach.Models.TRAMXE

@{
    ViewBag.Title = "Thêm Trạm Xe";
}

<h2>Thêm Trạm Xe</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <label>Tên Trạm</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTram, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTram, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Tỉnh Thành</label>
            </div>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.MaTT, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("tinhThanhDropList", (List<SelectListItem>)ViewBag.listItems, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Địa Chỉ</label>
            </div>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })*@

                <textarea class="form-control" data-val="true" rows="3" id="DiaChi" name="DiaChi" type="text" value=""></textarea>
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Mô Tả</label>
            </div>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })*@

                <textarea class="form-control" data-val="true" rows="3" id="MoTa" name="MoTa" type="text" value=""></textarea>
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Quay Về", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
