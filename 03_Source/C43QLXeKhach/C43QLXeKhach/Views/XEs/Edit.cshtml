@model C43QLXeKhach.Models.XE

@{
    ViewBag.Title = "Cập Nhật Xe";
}

<h2>Cập Nhật Xe</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaXe)

        <div class="form-group">
            <div class="col-md-2">
                <label>Loại Xe</label>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("xeDropList", (List<SelectListItem>)ViewBag.listItems, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.LoaiXe, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.LoaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Biển Số Xe</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BienSoXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BienSoXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label>Hãng Xe</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HangXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HangXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Về", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
